<p id="notice"><%= notice %></p>

<h1>Admin Requests</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request|%>
      <tr>
        <td><%= User.where(id: request.user_id).last.first_name %></td>
        <td><%= request.category %></td>
        <td><%= request.subcategory %></td>
        <td><%= request.tax_category %></td>
        <td><%= request.gift %></td>
        <td><%= request.cost %></td>
        <td><%= request.items_purchased %></td>
        <td><%= request.type %></td>
        <td><%= Vendor.where(id: request.vendor_id).last.vendor_name %></td>
        <td><%= request.status %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', :admin_home %>
