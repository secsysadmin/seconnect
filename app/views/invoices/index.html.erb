<div class='page-wrapper'>
  
  <div class='banner'>
    <h1>Invoices</h1>
  </div>
  <p id="notice"><%= notice %></p>

  <div class='card-stack'>
    <div class='card'>
      <table>
        <thead>
          <tr class='strongRow'>
            <th>Vendor</th>
            <th>Vendor title</th>
            <th>Tax id number</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Payment method</th>
            <th>Test</th>
            <th>Notes</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @invoices.each do |invoice| %>
            <tr class='normalRow'>
              <td><%= Vendor.where(id: invoice.vendor_id).last.vendor_name %></td>
              <td><%= invoice.vendor_title %></td>
              <td><%= invoice.tax_id_number %></td>
              <td><%= invoice.address %></td>
              <td><%= invoice.city %></td>
              <td><%= invoice.state %></td>
              <td><%= invoice.zip %></td>
              <td><%= invoice.payment_method %></td>
              <td><%= invoice.test %></td>
              <td><%= invoice.notes %></td>
              
              <td class='noSpace'><%= link_to 'Show', invoice, {:class => 'crudButton'} %></td>
              <td class='noSpace'><%= link_to 'Edit', edit_invoice_path(invoice), {:class => 'crudButton'} %></td>
              <td class='noSpace'><%= button_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class='card-stack'>
    <%= link_to 'New Invoice', new_invoice_path, {:class => 'button'} %>
    <%= link_to 'Back', :back, {:class => 'button'} %>
  </div>
</div>