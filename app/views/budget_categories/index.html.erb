<p id="notice"><%= notice %></p>

<h1>Budget Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Budgeted</th>
      <th>Spent</th>
      <th>Pending</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @budget_categories.each do |budget_category| %>
      <tr>
        <td><%= budget_category.name %></td>
        <td><%= budget_category.budgeted %></td>
        <td><%= budget_category.spent %></td>
        <td><%= budget_category.pending %></td>
        <td><%= budget_category.balance %></td>
        <td><%= link_to 'Show', budget_category %></td>
        <td><%= link_to 'Edit', edit_budget_category_path(budget_category) %></td>
        <td><%= link_to 'Destroy', budget_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Budget Category', new_budget_category_path %> <br>
<%= link_to 'Back', :back %>
