<div class="page-wrapper">
  
  <div class="banner">
    <h1>Committees</h1>
  </div>
  <p id="notice"><%= notice %></p>

  <div class="card-stack">
    <div class="card">
      <table>
        <thead>
          <tr class="strongRow">
            <th>Name</th>
            <th>Budget</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @committees.each do |committee| %>
            <tr class="normalRow">
              <td><%= committee.committee_name %></td>
              <td><%= Budget.find_by(id: committee&.budget_id)&.name %></td>
              <td class="noSpace"><%= link_to 'Show', committee, {:class => "crudButton"} %></td>
              <td class="noSpace"><%= link_to 'Edit', edit_committee_path(committee), {:class => "crudButton"} %></td>
              <td class="noSpace"><%= button_to 'Delete', committee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="card-stack">
    <%= link_to 'New Committee', new_committee_path, {:class => "button"} %>
  </div>
</div>
